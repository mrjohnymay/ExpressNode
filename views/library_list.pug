extends layout

block content
  h1= title

  h3 Filters
    
    form.sort(method='GET' action='')
      label
        select#libraryname.form-control(type='select'  name='libraryname' required='true')
          option(value='name') Name
          option(value='asc') ASC
          option(value='desc') DESC

      button.btn.btn-primary(type='submit') Sort
  
  hr
  
  ul
    each library in library_list
      li 
        a(href=library.url) #{library.name} 

    else
      li There are no libraries.